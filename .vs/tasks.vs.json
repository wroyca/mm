{
  "version": "0.2.1",
  "tasks": [
    {
      "inheritEnvironments": [
        "${cpp.activeConfiguration}"
      ],
      "taskLabel": "build",
      "appliesTo": "**",
      "contextType": "build",
      "type": "launch",
      "command": "${env.comspec}",
      "args": [
        "b config.cxx=cl config.cxx.coptions=\"/Od /MDd /Zi\" config.cxx.loptions=/DEBUG"
      ]
    },
    {
      "taskLabel": "clean",
      "appliesTo": "**",
      "type": "launch",
      "contextType": "clean",
      "command": "${env.comspec}",
      "args": [
        "b clean"
      ]
    }
  ]
}
